@model StudentCourseResults.Models.StudentResult

<h2>Delete Student Result</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.StudentName</h4>
    <dl>
        <dt>Course Title</dt>
        <dd>@Model.CourseTitle</dd>

        <dt>Total Marks</dt>
        <dd>@Model.TotalMarks</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button> |
    <a asp-action="Index">Cancel</a>
</form>